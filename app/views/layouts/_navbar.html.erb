<div class="ui small inverted menu">
	<%# <div class="ui container"> %>
		<a href="/" class="item">
			<i class="large circular comments outline icon"></i> Chatroom
		</a>
		<div class="right menu">
			<div class="ui dropdown item mobile only">
      chatrooms <i class="dropdown icon"></i>
      <div class="menu">
					<% @chatrooms.each do |chatroom| %>
						<% active_class = (@chatroom == chatroom) ? "active" : "" %>
						<%= link_to chatroom_path(chatroom.id), class: "item #{active_class}" do %>
							<%= "#{chatroom.name}-chat" %> <br> <small><%= chatroom.users.uniq.count %> members</small>
						<%end%>
					<% end %>
      </div>
    </div>
			<div class="item">
				<% if current_user %>
					<%= link_to current_user.username, chatrooms_path, class: "ui black button" %>
				<% else %>
					<%= link_to "register", new_user_path, class: "ui black button" %>
				<% end %>
			</div>
			<div class="item">
			<% if logged_in? %>
					<%= link_to "log out", login_path, method: :delete , class: "ui black button" %>
			<% else %>
					<%= link_to "log in", login_path, class: "ui black button" %>
			<% end %>
			</div>
		</div>
	<%# </div> %>
</div>