<div class="ui grid">
  <div class="sixteen wide mobile eight wide tablet eight wide computer column centered">
    <h2 class="">Login to the fantastic mokochat</h2>
    <%= form_with scope: :session, url: login_path, class: "ui form", local: true do |f|%> 
      <div class="field">
        <%= f.label :email %>
        <div class="ui left icon input">
          <%= f.text_field :email %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit "Login", class: "ui right floated button" %>
    <% end %>
  </div>
</div>
