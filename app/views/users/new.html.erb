<div class="ui grid">
  <div class="sixteen wide mobile eight wide tablet eight wide computer column centered">
    <h2 class="">Register to the fantastic mokochat</h2>
    <%= form_with scope: :user, url: users_path, class: "ui form", local: true do |f| %>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :photo, "Profile picture" %>
        <%= f.file_field :photo %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      <%# <button class="ui button" type="submit">Submit</button> %>
      <%= f.submit "Register", class: "ui button right floated" %>
    <%# </form> %>
    <% end %>
  </div>
</div>